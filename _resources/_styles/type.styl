html {
	font-size: 10px;
	font-family: 'Calluna', serif;
}
@media desktop {
	html {
		font-size: 11px;
		color: black
	}
}
.unselectable {
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}
p {
	line-height: 150%;
	text-align: left;
	cursor: default;
	font-size: 1.9rem;
	font-family: 'Calluna', serif;
}
@media phone {
	p {
		max-width: 500px;
		margin: 2rem 2rem 2rem 4rem;
	}
}
@media laptop {
	p {
		margin: 0;
	}
}
a, a:focus, a:visited, a:active {
	font-family: 'FoundersGroteskMono', monospace;
	text-decoration: none;
  border-bottom: 3px solid #FFE3E2;
  color: black;
}
strong {
	font-weight: normal;
}
h1,h2,h3,h4,h5,h6 {
	margin: 0 0;
	padding: 0 0;
	font-size: 1rem;
	font-weight: normal;
	line-height: 125%;
	position: relative;
	z-index: 9999;
	cursor: default;
}
.HeadingSmall {
	font-size: 1.9rem;
	margin: 0 0 3rem 0;
	font-family: 'Calluna', serif;
	letter-spacing: .1rem;
}
@media phone {
	.HeadingSmall {
		margin: 0 0 4rem 4rem;
	}
}
@media laptop {
	.HeadingSmall {
		margin: 0 0 3rem 0;
	}
}
.HeadingLarge {
	width: 100%;
}
.RedText {
	color: #ff3431;
}
.BoldText {
	font-weight: bold;
}
.ItalicText {
	font-style: italic;
}
.MonospaceText {
	font-family: 'FoundersGroteskMono', monospace;
	font-size: 1.8rem;
}
.SmallText {
	font-size: 1.5rem;
}